<%= form_with model: [:admin, @fortune] do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :rarity %><br>
    <%= f.select :rarity, ["normal", "super_rare"] %>
  </p>

  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </p>

  <%= f.submit %>
<% end %>